                    <source_model>Magento\Backend\Model\Config\Source\Locale\Weekdays</source_model>
                </field>
                <field id="weekend" translate="label" type="multiselect" sortOrder="15" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Weekend Days</label>
                    <source_model>Magento\Backend\Model\Config\Source\Locale\Weekdays</source_model>
                    <can_be_empty>1</can_be_empty>
                </field>
            </group>
            <group id="store_information" translate="label" type="text" sortOrder="100" showInDefault="1" showInWebsite="1" showInStore="1">
