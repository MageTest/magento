<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../../lib/internal/Magento/Framework/Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Adminhtml::admin">
                <resource id="Magento_Reports::report" title="Reports" sortOrder="70">
                    <resource id="Magento_Reports::report_marketing" title="Marketing" sortOrder="10">
                        <resource id="Magento_Reports::shopcart" title="Shopping Cart" sortOrder="10">
                            <resource id="Magento_Reports::product" title="Products in Cart" sortOrder="10" />
                            <resource id="Magento_Reports::abandoned" title="Abandoned Cart" sortOrder="20" />
                        </resource>
                        <resource id="Magento_Reports::report_search" title="Search Terms" sortOrder="30" />
                    </resource>
                    <resource id="Magento_Reports::review" title="Reviews" sortOrder="20">
                        <resource id="Magento_Reports::review_customer" title="By Customers" sortOrder="10" />
                        <resource id="Magento_Reports::review_product" title="By Products" sortOrder="20" />
                    </resource>
                    <resource id="Magento_Reports::salesroot" title="Sales" sortOrder="40">
                        <resource id="Magento_Reports::salesroot_sales" title="Orders" sortOrder="10" />
                        <resource id="Magento_Reports::tax" title="Tax" sortOrder="20" />
                        <resource id="Magento_Reports::invoiced" title="Invoiced" sortOrder="30" />
                        <resource id="Magento_Reports::shipping" title="Shipping" sortOrder="40" />
                        <resource id="Magento_Reports::refunded" title="Refunds" sortOrder="50" />
                        <resource id="Magento_Reports::coupons" title="Coupons" sortOrder="50" />
                    </resource>
                    <resource id="Magento_Reports::customers" title="Customers" sortOrder="50">
                        <resource id="Magento_Reports::totals" title="Order Total" sortOrder="10" />
                        <resource id="Magento_Reports::customers_orders" title="Order Count" sortOrder="20" />
                        <resource id="Magento_Reports::accounts" title="New" sortOrder="30" />
                    </resource>
                    <resource id="Magento_Reports::report_products" title="Products" sortOrder="60">
                        <resource id="Magento_Reports::viewed" title="Views" sortOrder="10" />
                        <resource id="Magento_Reports::bestsellers" title="Bestsellers" sortOrder="20" />
                        <resource id="Magento_Reports::lowstock" title="Low Stock" sortOrder="30" />
                        <resource id="Magento_Reports::sold" title="Ordered" sortOrder="40" />
                        <resource id="Magento_Reports::downloads" title="Downloads" sortOrder="50" />
                    </resource>
                    <resource id="Magento_Reports::statistics" title="Statistics" sortOrder="80">
                        <resource id="Magento_Reports::statistics_refresh" title="Refresh statistics" sortOrder="10"/>
                    </resource>
                </resource>
                <resource id="Magento_Adminhtml::stores">
                    <resource id="Magento_Adminhtml::stores_settings">
                        <resource id="Magento_Adminhtml::config">
                            <resource id="Magento_Reports::reports" title="Reports" sortOrder="70" />
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
