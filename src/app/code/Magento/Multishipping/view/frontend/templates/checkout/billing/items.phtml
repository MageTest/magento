                        <td class="col item" data-th="<?php echo $this->escapeHtml(__('Product Name'));?>"><?php echo $this->getItemHtml($_item) ?></td>
                        <td class="col qty" data-th="<?php echo $this->escapeHtml(__('Qty'));?>"><?php echo $_item->getQty() ?></td>
                    </tr>
