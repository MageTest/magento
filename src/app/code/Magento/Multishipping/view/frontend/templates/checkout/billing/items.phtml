                <thead>
                    <tr>
                        <th class="col item" scope="col"><?php echo __('Product Name') ?></th>
                        <th class="col qty" scope="col"><?php echo __('Qty') ?></th>
                    </tr>
                </thead>
                <tbody>
                <?php foreach ($this->getVirtualQuoteItems() as $_item): ?>
